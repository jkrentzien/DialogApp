<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pe.edu.cibertec.dialogapp.MainActivity">

    <Button
        android:id="@+id/dialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="abrirDialogo"
        android:text="DIalog"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/dialogButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="abrirDialogo2"
        android:text="DIalog2"
        android:layout_centerInParent="true"
        android:layout_below="@id/dialogButton"/>
    <Button
        android:id="@+id/dialogButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="abrirDialogo3"
        android:text="DIalog3"
        android:layout_centerInParent="true"
        android:layout_below="@id/dialogButton2"/>
    <Button
        android:id="@+id/customBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="abrirCustom"
        android:text="CustomDIalog"
        android:layout_centerInParent="true"
        android:layout_below="@id/dialogButton3"/>
    <Button
        android:id="@+id/dateBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openDatePicker"
        android:text="DatePicker"
        android:layout_centerInParent="true"
        android:layout_below="@id/customBut"/>
    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="aqui"
        android:layout_below="@id/dateBut"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/timeBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openTimePicker"
        android:text="TimePicker"
        android:layout_centerInParent="true"
        android:layout_below="@id/dateText"/>
    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="aqui"
        android:layout_below="@id/timeBut"
        android:layout_centerInParent="true"/>
</RelativeLayout>
